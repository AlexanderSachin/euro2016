{{#> layout}}
{{#*inline "head"}}
<title>Settings - Euro 2016</title>
{{/inline}}
{{#*inline "body"}}
{{> navbar}}
<div class="container">
<form method="post" action="{{@origin}}/settings">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <div class="form-group">
        <label for="name">Name (3 to 40 characters)</label>
        <input type="text" minlength="3" maxlength="40" required name="name" class="form-control" id="name" placeholder="Μορφεύς" value="{{user.name}}">
    </div>
    <button type="submit" class="btn btn-default">Save</button>
</form>
</div>
{{/inline}}
{{/layout}}
